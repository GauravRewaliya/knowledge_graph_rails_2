<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<style>
  :root {
    --bg-gray-900: #111827;
    --bg-gray-950: #030712;
    --gray-800: #1f2937;
    --gray-700: #374151;
    --gray-500: #6b7280;
    --gray-400: #9ca3af;
    --gray-300: #d1d5db;
    --gray-100: #f3f4f6;
    --blue-600: #2563eb;
    --blue-500: #3b82f6;
    --blue-400: #60a5fa;
    --blue-900-20: rgba(30, 58, 138, 0.2);
    --red-600: #dc2626;
    --white: #ffffff;
  }

  body {
    margin: 0;
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    background-color: var(--bg-gray-900);
    color: var(--gray-100);
    overflow: hidden;
  }

  #app {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }

  .app-container {
    display: flex;
    height: 100%;
    width: 100%;
    background-color: var(--bg-gray-900);
    color: var(--gray-100);
  }

  /* Sidebar */
  .sidebar {
    width: 4rem;
    background-color: var(--bg-gray-950);
    border-right: 1px solid var(--gray-800);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem 0;
    gap: 1.5rem;
    flex-shrink: 0;
    z-index: 20;
  }

  .sidebar-top {
    padding: 0.5rem;
    background-color: var(--blue-600);
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(30, 58, 138, 0.2);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    align-items: center;
  }

  .nav-btn {
    padding: 0.75rem;
    border-radius: 0.75rem;
    transition: all 0.2s;
    position: relative;
    color: var(--gray-400);
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-btn:hover:not(:disabled) {
    background-color: var(--gray-800);
    color: var(--white);
  }

  .nav-btn.active {
    background-color: var(--blue-900-20);
    color: var(--blue-400);
    box-shadow: 0 0 15px rgba(37, 99, 235, 0.3);
  }

  .nav-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    left: 4rem;
    top: 50%;
    transform: translateY(-50%);
    background-color: var(--bg-gray-900);
    color: var(--white);
    font-size: 0.75rem;
    padding: 0.375rem 0.5rem;
    border-radius: 0.25rem;
    opacity: 0;
    pointer-events: none;
    white-space: nowrap;
    border: 1px solid var(--gray-700);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: opacity 0.2s;
    z-index: 50;
  }

  .nav-btn:hover .tooltip {
    opacity: 1;
  }

  .tooltip-arrow {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    width: 0.5rem;
    height: 0.5rem;
    background-color: var(--bg-gray-900);
    border-left: 1px solid var(--gray-700);
    border-bottom: 1px solid var(--gray-700);
  }

  /* Main Content */
  .main-content {
    flex: 1;
    display: flex;
    overflow: hidden;
    position: relative;
  }

  .view-container {
    flex: 1;
    display: flex;
    width: 100%;
    overflow: hidden;
    flex-direction: column;
  }

  .empty-state {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    text-align: center;
    color: var(--gray-500);
  }

  .btn-primary {
    background-color: var(--blue-600);
    color: var(--white);
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    border: none;
    cursor: pointer;
    font-weight: 500;
    margin-top: 1rem;
    transition: background-color 0.2s;
  }

  .btn-primary:hover {
    background-color: var(--blue-500);
  }

  /* Chat Drawer */
  .chat-drawer {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 100%;
    max-width: 450px;
    background-color: var(--bg-gray-900);
    border-left: 1px solid var(--gray-700);
    box-shadow: -10px 0 15px -3px rgba(0, 0, 0, 0.1);
    z-index: 30;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
    opacity: 0;
    visibility: hidden;
  }

  /* HAR Viewer Styles */
  .har-container {
    display: flex;
    height: 100%;
    width: 100%;
    background-color: var(--bg-gray-900);
    position: relative;
  }

  .har-modal-overlay {
    position: absolute;
    inset: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }

  .har-modal {
    background-color: var(--gray-800);
    border: 1px solid var(--gray-700);
    border-radius: 0.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    padding: 1.5rem;
    max-width: 24rem;
    width: 100%;
  }

  .har-modal-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--red-600);
    margin-bottom: 1rem;
  }

  .har-modal-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--white);
    margin: 0;
  }

  .har-modal-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
  }

  .btn-cancel {
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    background-color: var(--gray-700);
    color: var(--gray-100);
    font-size: 0.875rem;
    border: none;
    cursor: pointer;
  }

  .btn-delete {
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    background-color: var(--red-600);
    color: var(--white);
    font-size: 0.875rem;
    border: none;
    cursor: pointer;
  }

  .har-left-panel {
    display: flex;
    flex-direction: column;
    border-right: 1px solid var(--gray-700);
    transition: all 0.3s;
    width: 100%;
  }

  .har-left-panel.split {
    width: 50%;
  }

  .har-toolbar {
    padding: 0.75rem;
    border-bottom: 1px solid var(--gray-700);
    background-color: var(--gray-800);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .har-search-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .search-input-wrapper {
    position: relative;
    flex: 1;
  }

  .search-icon {
    position: absolute;
    left: 0.5rem;
    top: 0.625rem;
    height: 1rem;
    width: 1rem;
    color: var(--gray-500);
  }

  .search-input {
    width: 100%;
    background-color: var(--bg-gray-900);
    border: 1px solid var(--gray-600);
    border-radius: 0.25rem;
    padding: 0.375rem 0.5rem 0.375rem 2rem;
    font-size: 0.875rem;
    color: var(--white);
    outline: none;
  }

  .search-input:focus {
    border-color: var(--blue-500);
  }

  .btn-add-har {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    background-color: var(--blue-600);
    color: var(--white);
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .btn-add-har:hover {
    background-color: var(--blue-500);
  }

  .har-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.75rem;
    color: var(--gray-400);
  }

  .control-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .btn-text {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    background: none;
    border: none;
    color: inherit;
    font-weight: 500;
    cursor: pointer;
    padding: 0;
  }

  .btn-text:hover {
    color: var(--white);
  }

  .select-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-left: 1px solid var(--gray-700);
    padding-left: 0.75rem;
  }

  .har-select {
    background-color: var(--bg-gray-900);
    border: 1px solid var(--gray-600);
    border-radius: 0.25rem;
    padding: 0.125rem 0.375rem;
    font-size: 0.75rem;
    color: var(--white);
    outline: none;
  }

  .view-toggle {
    display: flex;
    border: 1px solid var(--gray-700);
    border-radius: 0.25rem;
    margin-left: 0.5rem;
  }

  .btn-icon {
    padding: 0.25rem;
    background: none;
    border: none;
    color: var(--gray-400);
    cursor: pointer;
    display: flex;
  }

  .btn-icon:hover {
    color: var(--white);
  }

  .btn-icon.active {
    background-color: var(--gray-700);
    color: var(--white);
  }

  .har-list {
    flex: 1;
    overflow-y: auto;
    outline: none;
  }

  .har-entry-row {
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--gray-800);
    cursor: pointer;
    transition: background-color 0.2s;
    border-left: 2px solid transparent;
  }

  .har-entry-row:hover {
    background-color: rgba(31, 41, 55, 0.5); /* gray-800/50 */
  }

  .har-entry-row.selected {
    background-color: var(--blue-900-20);
    border-left-color: var(--blue-500);
  }

  .checkbox-col {
    padding: 0.75rem 0.5rem 0.75rem 0.75rem;
    cursor: pointer;
  }

  .entry-content {
    flex: 1;
    min-width: 0;
    padding: 0.5rem 0.75rem 0.5rem 0;
  }

  .entry-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .method-badge {
    font-size: 0.625rem;
    font-weight: 700;
    padding: 0 0.375rem;
    border-radius: 0.25rem;
  }

  .status-code {
    font-size: 0.625rem;
  }

  .status-success { color: #4ade80; } /* green-400 */
  .status-error { color: #f87171; } /* red-400 */

  .size-text {
    font-size: 0.75rem;
    color: var(--gray-500);
    margin-left: auto;
  }

  .entry-url-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .url-text {
    font-size: 0.75rem;
    color: var(--gray-300);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-family: monospace;
  }

  .time-text {
    font-size: 0.625rem;
    color: var(--gray-500);
  }

  .waterfall-container {
    margin-top: 0.5rem;
    height: 0.25rem;
    background-color: var(--gray-800);
    border-radius: 9999px;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .waterfall-bar {
    position: absolute;
    height: 100%;
    background-color: var(--blue-600);
    border-radius: 9999px;
    opacity: 0.5;
  }

  .har-details-panel {
    width: 50%;
    display: flex;
    flex-direction: column;
    background-color: var(--gray-800);
    border-left: 1px solid var(--gray-700);
  }

  .details-header {
    padding: 0.75rem;
    border-bottom: 1px solid var(--gray-700);
    background-color: var(--bg-gray-900);
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .details-title-group {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .details-url {
    font-weight: 700;
    color: var(--gray-100);
    font-size: 0.875rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 20rem;
  }

  .details-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--gray-500);
    margin-top: 0.25rem;
  }

  .details-content {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-title {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--gray-500);
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .headers-box {
    background-color: var(--bg-gray-900);
    border-radius: 0.25rem;
    padding: 0.5rem;
    font-size: 0.75rem;
    font-family: monospace;
    overflow-x: auto;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .header-row {
    display: flex;
    gap: 0.5rem;
  }

  .header-name {
    color: var(--blue-400);
    min-width: 100px;
  }

  .header-value {
    color: var(--gray-300);
    word-break: break-all;
  }

  .response-box {
    background-color: var(--bg-gray-900);
    border-radius: 0.25rem;
    padding: 0.5rem;
    overflow: auto;
    border: 1px solid var(--gray-700);
    min-height: 300px;
  }

  .response-pre {
    font-size: 0.75rem;
    color: var(--gray-400);
    white-space: pre-wrap;
    margin: 0;
  }

  /* Method Colors */
  .method-get { color: var(--blue-400); background-color: rgba(96, 165, 250, 0.1); }
  .method-post { color: #4ade80; background-color: rgba(74, 222, 128, 0.1); }
  .method-put { color: #facc15; background-color: rgba(250, 204, 21, 0.1); }
  .method-delete { color: #f87171; background-color: rgba(248, 113, 113, 0.1); }
  /* JsonViewer Styles */
  .json-primitive-row {
    display: flex;
    align-items: flex-start;
    font-family: monospace;
    font-size: 0.75rem;
    margin-left: 1rem;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    cursor: text;
    transition: background-color 0.2s;
  }

  .json-primitive-row:hover {
    background-color: rgba(31, 41, 55, 0.5);
  }

  .json-primitive-row:focus {
    background-color: rgba(30, 58, 138, 0.3);
    outline: 1px solid rgba(59, 130, 246, 0.5);
  }

  .json-key {
    color: #d8b4fe; /* purple-300 */
    margin-right: 0.25rem;
    user-select: none;
  }

  .json-value {
    word-break: break-all;
  }

  .json-string { color: #86efac; } /* green-300 */
  .json-number { color: #93c5fd; } /* blue-300 */
  .json-bool { color: #fde047; } /* yellow-300 */
  .json-null { color: var(--gray-500); }

  .json-object-container {
    font-family: monospace;
    font-size: 0.75rem;
    user-select: text;
  }

  .json-object-row {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    cursor: pointer;
    border-radius: 0.25rem;
    padding: 0.125rem;
    margin-left: 0.5rem;
    transition: background-color 0.2s;
  }

  .json-object-row:hover {
    background-color: rgba(31, 41, 55, 0.5);
  }

  .json-object-row:focus {
    background-color: rgba(30, 58, 138, 0.3);
    outline: 1px solid rgba(59, 130, 246, 0.5);
  }

  .json-object-row.cursor-default {
    cursor: default;
  }

  .json-toggle-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .json-bracket {
    color: var(--gray-400);
  }

  .json-ellipsis {
    margin: 0 0.25rem;
    color: var(--gray-500);
  }

  .json-meta {
    color: var(--gray-500);
    margin-left: 0.25rem;
    user-select: none;
  }

  .json-copy-btn {
    margin-left: auto;
    opacity: 0;
    background: none;
    border: none;
    color: var(--gray-500);
    cursor: pointer;
    display: flex;
    align-items: center;
  }

  .json-object-row:hover .json-copy-btn,
  .json-copy-btn:focus {
    opacity: 1;
  }

  .json-copy-btn:hover {
    color: var(--white);
  }

  .json-tree-children {
    border-left: 1px solid var(--gray-700);
    margin-left: 0.875rem;
    padding-left: 0.25rem;
  }

  .json-bracket-close {
    margin-left: 0.5rem;
    color: var(--gray-400);
    user-select: none;
  }

  .chat-drawer.open {
    transform: translateX(0);
    opacity: 1;
    visibility: visible;
  }

  /* Project Manager Placeholder */
  .project-manager {
    height: 100vh;
    width: 100vw;
    background-color: var(--bg-gray-900);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-400);
  }

  /* Har Viewer Styles */
  .har-viewer {
    padding: 2rem;
    width: 100%;
    overflow-y: auto;
  }
  
  .har-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--gray-800);
    padding-bottom: 1rem;
  }

  .har-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .har-item {
    background-color: var(--gray-800);
    padding: 1rem;
    border-radius: 0.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Graph Stats */
  .graph-stats {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: rgba(31, 41, 55, 0.9);
    backdrop-filter: blur(4px);
    padding: 0.75rem;
    border-radius: 0.5rem;
    border: 1px solid var(--gray-700);
    font-size: 0.75rem;
    color: var(--gray-300);
    z-index: 10;
  }

  .stat-value {
    color: var(--white);
    font-weight: bold;
  }
</style>

<div id="app">
  <!-- Project Manager (if no active project) -->
  <div v-if="!store.activeProject" class="project-manager">
    <div style="text-align: center;">
      <h2 style="color: white; margin-bottom: 1rem;">Project Manager</h2>
      <button @click="store.init()" class="btn-primary">Open Demo Project</button>
    </div>
  </div>

  <!-- Main App -->
  <div v-else class="app-container">
    <!-- Sidebar -->
    <nav class="sidebar">
      <div class="sidebar-top" @click="store.closeProject()" title="Back to Projects">
        <icon name="arrow-left" size="24" color="white"></icon>
      </div>

      <div class="nav-group">
        <nav-button 
          :active="store.viewMode === 'UPLOAD'" 
          @click="triggerAddHar"
          label="Add HAR File"
          icon="upload">
        </nav-button>
        
        <nav-button 
          :active="store.viewMode === 'EXPLORE'" 
          @click="store.setViewMode('EXPLORE')" 
          :disabled="harEntries.length === 0"
          label="Explore & Clean"
          icon="bar-chart-2">
        </nav-button>

        <nav-button 
          :active="store.viewMode === 'BROWSER'" 
          @click="store.setViewMode('BROWSER')" 
          label="Virtual Browser"
          icon="globe">
        </nav-button>

        <nav-button 
          :active="store.viewMode === 'KNOWLEDGE_DB'" 
          @click="store.setViewMode('KNOWLEDGE_DB')" 
          label="Knowledge DB"
          icon="database">
        </nav-button>

        <nav-button 
          :active="store.viewMode === 'GRAPH'" 
          @click="store.setViewMode('GRAPH')" 
          :disabled="harEntries.length === 0"
          label="Knowledge Graph"
          icon="share-2">
        </nav-button>

        <nav-button 
          :active="store.viewMode === 'TEST_TOOLS'" 
          @click="store.setViewMode('TEST_TOOLS')" 
          :disabled="harEntries.length === 0"
          label="Test Tools"
          icon="flask-conical">
        </nav-button>

        <nav-button 
          :active="store.viewMode === 'SETTINGS'" 
          @click="store.setViewMode('SETTINGS')" 
          label="Settings & Backup"
          icon="settings">
        </nav-button>
      </div>

      <div style="margin-top: auto; margin-bottom: 1rem;">
        <nav-button 
          :active="store.isChatOpen" 
          @click="store.toggleChat()" 
          :disabled="harEntries.length === 0"
          label="AI Agent"
          icon="message-square">
        </nav-button>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
      <input 
        type="file" 
        ref="fileInput" 
        @change="handleAddHar" 
        accept=".har" 
        style="display: none;" 
      />

      <!-- Views -->
      <div v-if="store.viewMode === 'EXPLORE'" class="view-container">
          <div v-if="harEntries.length > 0" class="h-full w-full">
            <har-viewer @add-har="triggerAddHar"></har-viewer>
          </div>
        <div v-else class="empty-state">
          <p style="margin-bottom: 1rem;">This project has no data yet.</p>
          <button @click="triggerAddHar" class="btn-primary">Add HAR File</button>
        </div>
      </div>

      <div v-if="store.viewMode === 'KNOWLEDGE_DB'" class="view-container">
        <div class="empty-state">
          <h2>Knowledge DB Panel</h2>
          <p>Database content goes here.</p>
        </div>
      </div>

      <div v-if="store.viewMode === 'GRAPH'" class="view-container" style="position: relative;">
        <div class="empty-state">
          <h2>Knowledge Graph</h2>
          <p>Graph visualization goes here.</p>
        </div>
