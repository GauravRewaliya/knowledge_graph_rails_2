<!DOCTYPE html>
<html>
<head>
  <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
  <style>
    :root {
      --bg-gray-900: #111827;
      --bg-gray-950: #030712;
      --gray-800: #1f2937;
      --gray-700: #374151;
      --gray-500: #6b7280;
      --gray-400: #9ca3af;
      --gray-300: #d1d5db;
      --gray-100: #f3f4f6;
      --blue-600: #2563eb;
      --blue-500: #3b82f6;
      --blue-400: #60a5fa;
      --blue-900-20: rgba(30, 58, 138, 0.2);
      --red-600: #dc2626;
      --white: #ffffff;
    }

    body {
      margin: 0;
      font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      background-color: var(--bg-gray-900);
      color: var(--gray-100);
      overflow: hidden;
    }

    #app {
      height: 100vh;
      width: 100vw;
      overflow: hidden;
    }

    .app-container {
      display: flex;
      height: 100%;
      width: 100%;
      background-color: var(--bg-gray-900);
      color: var(--gray-100);
    }

    /* Sidebar */
    .sidebar {
      width: 4rem;
      background-color: var(--bg-gray-950);
      border-right: 1px solid var(--gray-800);
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1rem 0;
      gap: 1.5rem;
      flex-shrink: 0;
      z-index: 20;
    }

    .sidebar-top {
      padding: 0.5rem;
      background-color: var(--blue-600);
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px rgba(30, 58, 138, 0.2);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .nav-group {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      align-items: center;
    }

    .nav-btn {
      padding: 0.75rem;
      border-radius: 0.75rem;
      transition: all 0.2s;
      position: relative;
      color: var(--gray-400);
      background: none;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .nav-btn:hover:not(:disabled) {
      background-color: var(--gray-800);
      color: var(--white);
    }

    .nav-btn.active {
      background-color: var(--blue-900-20);
      color: var(--blue-400);
      box-shadow: 0 0 15px rgba(37, 99, 235, 0.3);
    }

    .nav-btn:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    /* Tooltip */
    .tooltip {
      position: absolute;
      left: 4rem;
      top: 50%;
      transform: translateY(-50%);
      background-color: var(--bg-gray-900);
      color: var(--white);
      font-size: 0.75rem;
      padding: 0.375rem 0.5rem;
      border-radius: 0.25rem;
      opacity: 0;
      pointer-events: none;
      white-space: nowrap;
      border: 1px solid var(--gray-700);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      transition: opacity 0.2s;
      z-index: 50;
    }

    .nav-btn:hover .tooltip {
      opacity: 1;
    }

    .tooltip-arrow {
      position: absolute;
      left: 0;
      top: 50%;
      transform: translate(-50%, -50%) rotate(45deg);
      width: 0.5rem;
      height: 0.5rem;
      background-color: var(--bg-gray-900);
      border-left: 1px solid var(--gray-700);
      border-bottom: 1px solid var(--gray-700);
    }

    /* Main Content */
    .main-content {
      flex: 1;
      display: flex;
      overflow: hidden;
      position: relative;
    }

    .view-container {
      flex: 1;
      display: flex;
      width: 100%;
      overflow: hidden;
      flex-direction: column;
    }

    .empty-state {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      text-align: center;
      color: var(--gray-500);
    }

    .btn-primary {
      background-color: var(--blue-600);
      color: var(--white);
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      border: none;
      cursor: pointer;
      font-weight: 500;
      margin-top: 1rem;
      transition: background-color 0.2s;
    }

    .btn-primary:hover {
      background-color: var(--blue-500);
    }

    /* Chat Drawer */
    .chat-drawer {
      position: absolute;
      top: 0;
      right: 0;
      height: 100%;
      width: 100%;
      max-width: 450px;
      background-color: var(--bg-gray-900);
      border-left: 1px solid var(--gray-700);
      box-shadow: -10px 0 15px -3px rgba(0, 0, 0, 0.1);
      z-index: 30;
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
      opacity: 0;
      visibility: hidden;
    }

    .chat-drawer.open {
      transform: translateX(0);
      opacity: 1;
      visibility: visible;
    }

    /* Project Manager Placeholder */
    .project-manager {
      height: 100vh;
      width: 100vw;
      background-color: var(--bg-gray-900);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--gray-400);
    }

    /* Har Viewer Styles */
    .har-viewer {
      padding: 2rem;
      width: 100%;
      overflow-y: auto;
    }
    
    .har-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      border-bottom: 1px solid var(--gray-800);
      padding-bottom: 1rem;
    }

    .har-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .har-item {
      background-color: var(--gray-800);
      padding: 1rem;
      border-radius: 0.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Graph Stats */
    .graph-stats {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background-color: rgba(31, 41, 55, 0.9);
      backdrop-filter: blur(4px);
      padding: 0.75rem;
      border-radius: 0.5rem;
      border: 1px solid var(--gray-700);
      font-size: 0.75rem;
      color: var(--gray-300);
      z-index: 10;
    }

    .stat-value {
      color: var(--white);
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div id="app">
    <!-- Project Manager (if no active project) -->
    <div v-if="!store.activeProject" class="project-manager">
      <div style="text-align: center;">
        <h2 style="color: white; margin-bottom: 1rem;">Project Manager</h2>
        <button @click="store.init()" class="btn-primary">Open Demo Project</button>
      </div>
    </div>

    <!-- Main App -->
    <div v-else class="app-container">
      <!-- Sidebar -->
      <nav class="sidebar">
        <div class="sidebar-top" @click="store.closeProject()" title="Back to Projects">
          <icon name="arrow-left" size="24" color="white"></icon>
        </div>

        <div class="nav-group">
          <nav-button 
            :active="store.viewMode === 'UPLOAD'" 
            @click="triggerAddHar"
            label="Add HAR File"
            icon="upload">
          </nav-button>
          
          <nav-button 
            :active="store.viewMode === 'EXPLORE'" 
            @click="store.setViewMode('EXPLORE')" 
            :disabled="harEntries.length === 0"
            label="Explore & Clean"
            icon="bar-chart-2">
          </nav-button>

          <nav-button 
            :active="store.viewMode === 'BROWSER'" 
            @click="store.setViewMode('BROWSER')" 
            label="Virtual Browser"
            icon="globe">
          </nav-button>

          <nav-button 
            :active="store.viewMode === 'KNOWLEDGE_DB'" 
            @click="store.setViewMode('KNOWLEDGE_DB')" 
            label="Knowledge DB"
            icon="database">
          </nav-button>

          <nav-button 
            :active="store.viewMode === 'GRAPH'" 
            @click="store.setViewMode('GRAPH')" 
            :disabled="harEntries.length === 0"
            label="Knowledge Graph"
            icon="share-2">
          </nav-button>

          <nav-button 
            :active="store.viewMode === 'TEST_TOOLS'" 
            @click="store.setViewMode('TEST_TOOLS')" 
            :disabled="harEntries.length === 0"
            label="Test Tools"
            icon="flask-conical">
          </nav-button>

          <nav-button 
            :active="store.viewMode === 'SETTINGS'" 
            @click="store.setViewMode('SETTINGS')" 
            label="Settings & Backup"
            icon="settings">
          </nav-button>
        </div>

        <div style="margin-top: auto; margin-bottom: 1rem;">
          <nav-button 
            :active="store.isChatOpen" 
            @click="store.toggleChat()" 
            :disabled="harEntries.length === 0"
            label="AI Agent"
            icon="message-square">
          </nav-button>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="main-content">
        <input 
          type="file" 
          ref="fileInput" 
          @change="handleAddHar" 
          accept=".har" 
          style="display: none;" 
        />

        <!-- Views -->
        <div v-if="store.viewMode === 'EXPLORE'" class="view-container">
          <div v-if="harEntries.length > 0" class="har-viewer">
            <div class="har-header">
              <h2 style="color: white; margin: 0;">HAR Explorer</h2>
              <button @click="triggerAddHar" class="btn-primary">Add Another HAR</button>
            </div>
            <div class="har-list">
              <div v-for="(entry, index) in harEntries" :key="index" class="har-item">
                <div>
                  <div style="color: white; font-weight: 500;">{{ entry.name }}</div>
                  <div style="color: var(--gray-400); font-size: 0.875rem;">{{ formatBytes(entry.size) }}</div>
                </div>
                <button class="nav-btn" title="Delete">
                  <icon name="trash" size="18"></icon>
                </button>
              </div>
            </div>
          </div>
          <div v-else class="empty-state">
            <p style="margin-bottom: 1rem;">This project has no data yet.</p>
            <button @click="triggerAddHar" class="btn-primary">Add HAR File</button>
          </div>
        </div>

        <div v-if="store.viewMode === 'KNOWLEDGE_DB'" class="view-container">
          <div class="empty-state">
            <h2>Knowledge DB Panel</h2>
            <p>Database content goes here.</p>
          </div>
        </div>

        <div v-if="store.viewMode === 'GRAPH'" class="view-container" style="position: relative;">
          <div class="empty-state">
            <h2>Knowledge Graph</h2>
            <p>Graph visualization goes here.</p>
          </div>
          <div class="graph-stats">
            <div style="font-weight: bold; margin-bottom: 0.25rem;">Graph Stats</div>
            <div>Nodes: <span class="stat-value">{{ knowledgeData.nodes.length }}</span></div>
            <div>Links: <span class="stat-value">{{ knowledgeData.links.length }}</span></div>
          </div>
        </div>

        <div v-if="store.viewMode === 'TEST_TOOLS'" class="view-container">
           <div class="empty-state">
            <h2>Test Tools</h2>
            <p>Tool configuration goes here.</p>
          </div>
        </div>

        <div v-if="store.viewMode === 'SETTINGS'" class="view-container">
           <div class="empty-state">
            <h2>Settings</h2>
            <p>Project settings goes here.</p>
          </div>
        </div>

        <div v-if="store.viewMode === 'BROWSER'" class="view-container">
           <div class="empty-state">
            <h2>Virtual Browser</h2>
            <p>Browser interface goes here.</p>
          </div>
        </div>

        <!-- Chat Drawer -->
        <div :class="['chat-drawer', { open: store.isChatOpen }]">
          <div style="height: 100%; display: flex; flex-direction: column;">
            <div style="padding: 1rem; border-bottom: 1px solid var(--gray-700); display: flex; justify-content: space-between; align-items: center;">
              <h3 style="color: white; margin: 0;">AI Agent</h3>
              <button @click="store.toggleChat()" class="nav-btn">
                <icon name="x" size="20"></icon>
              </button>
            </div>
            <div style="flex: 1; padding: 1rem; overflow-y: auto;">
              <p style="color: var(--gray-400);">Chat history...</p>
            </div>
            <div style="padding: 1rem; border-top: 1px solid var(--gray-700);">
              <input type="text" placeholder="Ask something..." style="width: 100%; padding: 0.5rem; background: var(--gray-800); border: 1px solid var(--gray-700); color: white; border-radius: 0.375rem;">
            </div>
          </div>
        </div>

      </main>
    </div>
  </div>

  <script>
    // Include the store logic
    // We use a Rails render here to inline the JS file content since it resides in the views directory
    /* 
      Note: In a real production environment, this should probably be in the asset pipeline.
      For now, we inline it to keep it self-contained in the view layer as requested.
    */
  </script>
  <script>
    <%= render file: "#{Rails.root}/app/views/projects/har_project_show/show_vue_store.js" %>
  </script>

  <script>
    const { createApp, reactive, ref, computed, onMounted } = Vue;

    // --- Icons Component ---
    const Icon = {
      props: ['name', 'size', 'color'],
      template: `
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          :width="size || 24" 
          :height="size || 24" 
          viewBox="0 0 24 24" 
          fill="none" 
          :stroke="color || 'currentColor'" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path v-if="name === 'upload'" d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M17 8l-5-5-5 5M12 3v12"/>
          <path v-if="name === 'bar-chart-2'" d="M18 20V10M12 20V4M6 20v-6"/>
          <circle v-if="name === 'globe'" cx="12" cy="12" r="10"></circle>
          <path v-if="name === 'globe'" d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
          <path v-if="name === 'database'" d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/><path v-if="name === 'database'" d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><ellipse v-if="name === 'database'" cx="12" cy="5" rx="9" ry="3"/>
          <path v-if="name === 'share-2'" d="M18 5a3 3 0 1 0-3 3c-.1 0-.2 0-.3-.1l-5.8 3.4a3 3 0 1 0 0 4.4l5.8 3.4a3 3 0 1 0 3-3"/>
          <path v-if="name === 'flask-conical'" d="M10 2v7.527a2 2 0 0 1-.211.896L4.72 20.55a1 1 0 0 0 .9 1.45h12.76a1 1 0 0 0 .9-1.45l-5.069-10.127A2 2 0 0 1 14 9.527V2"/><line v-if="name === 'flask-conical'" x1="8.5" y1="2" x2="15.5" y2="2"/><path v-if="name === 'flask-conical'" d="M8.5 14h7"/>
          <path v-if="name === 'settings'" d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.74v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle v-if="name === 'settings'" cx="12" cy="12" r="3"/>
          <path v-if="name === 'message-square'" d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          <path v-if="name === 'arrow-left'" d="M19 12H5M12 19l-7-7 7-7"/>
          <path v-if="name === 'trash'" d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
          <line v-if="name === 'x'" x1="18" y1="6" x2="6" y2="18"></line><line v-if="name === 'x'" x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      `
    };

    // --- Nav Button Component ---
    const NavButton = {
      props: ['icon', 'label', 'active', 'disabled'],
      components: { Icon },
      template: `
        <button 
          class="nav-btn" 
          :class="{ active: active }" 
          :disabled="disabled"
          :title="label"
        >
          <icon :name="icon" size="20"></icon>
          <span class="tooltip">
            {{ label }}
            <span class="tooltip-arrow"></span>
          </span>
        </button>
      `
    };

    // --- Main App ---
    const app = createApp({
      components: { NavButton, Icon },
      setup() {
        const fileInput = ref(null);
        // Use the global store
        const store = window.projectStore;

        onMounted(() => {
          if (store) store.init();
        });

        const harEntries = computed(() => store?.activeProject?.harEntries || []);
        const knowledgeData = computed(() => store?.activeProject?.knowledgeData || { nodes: [], links: [] });

        const triggerAddHar = () => {
          fileInput.value.click();
        };

        const handleAddHar = (event) => {
          const file = event.target.files?.[0];
          if (file && store) {
            store.addHarFile(file);
          }
          event.target.value = '';
        };
        
        const deleteHar = (id) => {
            if (store) store.removeHarFile(id);
        };

        const formatBytes = (bytes, decimals = 2) => {
            if (!+bytes) return '0 Bytes';
            const k = 1024;
            const dm = decimals < 0 ? 0 : decimals;
            const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return `${parseFloat((bytes / Math.pow(k, i)).toFixed(dm))} ${sizes[i]}`;
        }

        return {
          store,
          fileInput,
          triggerAddHar,
          handleAddHar,
          deleteHar,
          harEntries,
          knowledgeData,
          formatBytes
        };
      }
    });

    app.mount('#app');
  </script>
</body>
</html>
