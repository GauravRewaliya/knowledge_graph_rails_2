<style>
  .project-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-form .error-container {
    margin-bottom: 1.5rem;
    background: rgba(127, 29, 29, 0.2);
    border: 1px solid #991b1b;
    border-radius: 0.75rem;
    padding: 1rem;
    animation: slideInFromTop 0.3s ease-out;
  }

  .project-form .error-container h2 {
    color: #f87171;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .project-form .error-container ul {
    list-style: disc;
    list-style-position: inside;
    color: #fca5a5;
    font-size: 0.875rem;
  }

  .project-form .error-container ul li {
    margin-top: 0.25rem;
  }

  .project-form .form-field {
    display: flex;
    flex-direction: column;
  }

  .project-form .form-field label {
    display: block;
    font-size: 0.875rem;
    color: #9ca3af;
    margin-bottom: 0.25rem;
  }

  .project-form .form-field input[type="text"],
  .project-form .form-field textarea {
    width: 100%;
    background: #111827;
    border: 1px solid #4b5563;
    border-radius: 0.5rem;
    padding: 0.5rem 1rem;
    color: white;
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  .project-form .form-field input[type="text"]:focus,
  .project-form .form-field textarea:focus {
    outline: none;
    border-color: #3b82f6;
  }

  .project-form .form-field textarea {
    resize: none;
    font-family: inherit;
  }

  .project-form .file-upload-wrapper {
    position: relative;
    border: 2px dashed #374151;
    background: rgba(17, 24, 39, 0.5);
    border-radius: 0.5rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: #9ca3af;
    transition: border-color 0.2s;
    cursor: pointer;
    text-align: center;
  }

  .project-form .file-upload-wrapper:hover {
    border-color: #3b82f6;
  }

  .project-form .file-upload-wrapper input[type="file"] {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
  }

  .project-form .file-upload-wrapper .upload-text {
    pointer-events: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .project-form .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding-top: 0.5rem;
  }

  .project-form .btn-cancel {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.2s;
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .project-form .btn-cancel:hover {
    color: white;
  }

  .project-form .btn-submit {
    background: #2563eb;
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.2s;
  }

  .project-form .btn-submit:hover {
    background: #3b82f6;
  }

  .project-form .btn-submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @keyframes slideInFromTop {
    from {
      transform: translateY(-1rem);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>

<%= form_with(model: project, class: "project-form") do |form| %>
  <% if project.errors.any? %>
    <div class="error-container">
      <h2>
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>
      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :title, "Project Name" %>
    <%= form.text_field :title, 
        autofocus: true,
        placeholder: "e.g., Q1 Audit Analysis" %>
  </div>

  <div class="form-field">
    <%= form.label :har_file, "Initial HAR File (Optional)" %>
    <div class="file-upload-wrapper">
      <span class="upload-text" id="har-file-text">Click to select a .har file</span>
      <%= form.file_field :har_file, accept: ".har", onchange: "updateFileName(this)" %>
    </div>
  </div>

  <div class="form-field">
    <%= form.label :desc, "Description" %>
    <%= form.text_area :desc,
        placeholder: "Enter project description...",
        rows: 4 %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", projects_path, class: "btn-cancel" %>
    <%= form.submit project.new_record? ? "Create Project" : "Update Project",
        class: "btn-submit" %>
  </div>
<% end %>

<script>
  function updateFileName(input) {
    const textSpan = document.getElementById('har-file-text');
    if (input.files && input.files[0]) {
      textSpan.textContent = input.files[0].name;
      textSpan.style.color = '#4ade80'; // green-400
    } else {
      textSpan.textContent = 'Click to select a .har file';
      textSpan.style.color = '';
    }
  }
</script>
