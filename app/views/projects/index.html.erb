<% content_for :title, "Projects" %>

<div class="project-manager">
  <div class="container">
    <!-- Header Section -->
    <header class="header">
      <div class="header-content">
        <div class="header-left">
          <h1 class="header-title">
            <svg class="icon-activity" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
            Knowledge Bank Projects
          </h1>
          <p class="header-subtitle">Manage your analysis workspaces locally.</p>
        </div>
        <div class="header-actions">
          <%# TODO: Implement import functionality %>
          <button class="btn btn-secondary" onclick="alert('TODO: Import functionality to be implemented')">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Import Project
          </button>
          <%= link_to new_project_path, class: "btn btn-primary" do %>
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
              <line x1="12" y1="11" x2="12" y2="17"></line>
              <line x1="9" y1="14" x2="15" y2="14"></line>
            </svg>
            New Project
          <% end %>
        </div>
      </div>
    </header>

    <!-- Projects Section -->
    <% if @projects.any? %>
      <div class="projects-section">
        <h2 class="section-title">
          <svg class="icon-section" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <path d="M16 10a4 4 0 0 1-8 0"></path>
          </svg>
          Your Projects
        </h2>
        
        <div class="projects-grid">
          <% @projects.each do |project| %>
            <div id="<%= dom_id project %>" class="project-card">
              <div class="card-header">
                <div class="folder-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
                  </svg>
                </div>
                <div class="card-actions">
                  <%# TODO: Implement export functionality %>
                  <button class="action-btn export-btn" onclick="alert('TODO: Export functionality for project <%= project.id %> to be implemented')" title="Export">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                      <polyline points="17 8 12 3 7 8"></polyline>
                      <line x1="12" y1="3" x2="12" y2="15"></line>
                    </svg>
                  </button>
                  <%= link_to edit_project_path(project), class: "action-btn", title: "Edit" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                  <% end %>
                  <%= button_to project_path(project), method: :delete, class: "action-btn delete-btn", title: "Delete", form: { data: { turbo_confirm: "Are you sure you want to delete this project?" } } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                  <% end %>
                </div>
              </div>

              <h3 class="card-title" title="<%= project.title %>">
                <%= link_to project.title, project %>
              </h3>

              <div class="card-date">
                Updated <%= time_ago_in_words(project.updated_at) %> ago
              </div>

              <div class="card-description">
                <%= truncate(project.desc, length: 100) %>
              </div>

              <%= link_to project, class: "btn-open-project", data: { turbo: false } do %>
                Open Project
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
          </svg>
        </div>
        <h3 class="empty-title">No Projects Found</h3>
        <p class="empty-text">Create a new project to get started.</p>
      </div>
    <% end %>
  </div>
</div>

<style>
  * {
    box-sizing: border-box;
  }

  .project-manager {
    min-height: 100vh;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: #ffffff;
    padding: 2rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  /* Header Styles */
  .header {
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .header-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .icon-activity {
    color: #3b82f6;
  }

  .header-subtitle {
    color: #9ca3af;
    margin: 0;
    font-size: 0.95rem;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(59, 130, 246, 0.4);
  }


  .icon {
    width: 18px;
    height: 18px;
  }

  .btn-secondary {
    background: rgba(75, 85, 99, 0.8);
    color: white;
    border: 1px solid rgba(107, 114, 128, 0.5);
  }

  .btn-secondary:hover {
    background: rgba(75, 85, 99, 1);
    border-color: rgba(156, 163, 175, 0.5);
    transform: translateY(-2px);
  }

  /* Section Title */
  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #e5e7eb;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon-section {
    color: #60a5fa;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  /* Project Card */
  .project-card {
    background: rgba(31, 41, 55, 0.8);
    border: 1px solid rgba(75, 85, 99, 0.5);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    backdrop-filter: blur(10px);
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .folder-icon {
    padding: 0.5rem;
    background: rgba(75, 85, 99, 0.5);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }

  .project-card:hover .folder-icon {
    background: rgba(59, 130, 246, 0.2);
    color: #60a5fa;
  }

  .card-actions {
    display: flex;
    gap: 0.25rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .card-actions {
    opacity: 1;
  }

  .action-btn {
    padding: 0.5rem;
    background: transparent;
    border: none;
    color: #9ca3af;
    cursor: pointer;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .action-btn:hover {
    background: rgba(75, 85, 99, 0.5);
    color: white;
  }

  .delete-btn:hover {
    background: rgba(239, 68, 68, 0.2);
    color: #f87171;
  }

  .export-btn:hover {
    background: rgba(34, 197, 94, 0.2);
    color: #4ade80;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f3f4f6;
    margin: 0 0 0.5rem 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .card-title a:hover {
    color: #60a5fa;
  }

  .card-date {
    font-size: 0.75rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }

  .card-description {
    color: #9ca3af;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    min-height: 3rem;
  }

  .btn-open-project {
    display: block;
    width: 100%;
    background: rgba(75, 85, 99, 0.5);
    color: white;
    padding: 0.75rem;
    border-radius: 0.5rem;
    text-align: center;
    font-weight: 500;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-open-project:hover {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    border: 2px dashed rgba(75, 85, 99, 0.5);
    border-radius: 1rem;
  }

  .empty-icon {
    background: rgba(31, 41, 55, 0.8);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: #6b7280;
  }

  .empty-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #d1d5db;
    margin: 0 0 0.5rem 0;
  }

  .empty-text {
    color: #6b7280;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .project-manager {
      padding: 1rem;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-title {
      font-size: 1.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .project-card {
    animation: fadeIn 0.5s ease-out;
  }

  .project-card:nth-child(1) { animation-delay: 0.1s; }
  .project-card:nth-child(2) { animation-delay: 0.2s; }
  .project-card:nth-child(3) { animation-delay: 0.3s; }
  .project-card:nth-child(4) { animation-delay: 0.4s; }
  .project-card:nth-child(5) { animation-delay: 0.5s; }
  .project-card:nth-child(6) { animation-delay: 0.6s; }
</style>